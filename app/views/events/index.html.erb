<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>City</th>
      <th>Country</th>
      <th>Address</th>
      <th>Postal code</th>
      <th>Time</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.city %></td>
        <td><%= event.country %></td>
        <td><%= event.address %></td>
        <td><%= event.postal_code %></td>
        <td><%= event.time %></td>
        <td><%= event.description %></td>
        <td><%= event.picture %></td>
        <td><%= event.lat %></td>
        <td><%= event.long %></td>
        <td><%= event.category %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

